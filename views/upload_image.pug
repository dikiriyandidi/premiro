extends layout

block content
    <ol class="breadcrumb">
        <li>Master Data</li>
        <li>Upload Image</li>
    </ol>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-wknd">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="datatable_content" class="table table-striped table-hover datatable_act">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade formModal" id="formModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" data-title="Image"></h4>
                </div>
                <form id="form_interest" action="" redir-url="" class="ajax" done="afterSubmit(response)">
                    <input type="hidden" id="id" name="id" >
                    <input type="hidden" id="wknd_csrf" name="#{csrf_token_name}" value="#{csrf_token}" />
                    <div class="modal-body">
                        <div class="form-group image-wrapper">
                            <label for="image" class="control-label">Image</label>
                            <div id="image"></div>
                            <div>
                                <input type="file" name="image">
                                <label><span id="image_label">Choose a file&hellip;</span></label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-wknd" id="fsubmit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="#{myConfig.asset_url}/assets/js/views/upload_image.js?v=#{myConfig.asset_version}"></script>
